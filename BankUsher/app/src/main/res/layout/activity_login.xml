<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/iv__setting_loge"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/x100"
            android:layout_centerInParent="true"
            android:src="@mipmap/black_logo" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_logo"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36dp"
                android:background="@mipmap/ic_account" />

            <com.meiaomei.bankusher.view.ClearEditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/iv_account"
                android:background="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/clear"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请输入登录名"
                android:singleLine="true"
                android:textColor="@color/colortext_check"
                android:textColorHint="@color/color_login_white"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="15dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/username"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@color/common_bg_press"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36dp"
                android:background="@mipmap/ic_password" />

            <com.meiaomei.bankusher.view.EtpEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@+id/iv_password"
                android:background="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/signin_eye_off"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/colortext_check"
                android:textColorHint="@color/color_login_white"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="15dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/password"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@color/common_bg_press"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/login_imbtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bt_select" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_forgetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:padding="17dp"
                android:text="系统设置"
                android:textColor="@color/color_line"
                android:textSize="19sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
