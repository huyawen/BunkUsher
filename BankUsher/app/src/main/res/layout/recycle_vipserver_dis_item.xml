<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/back_list"
    android:layout_height="wrap_content">


    <!--已处理的界面-->
    <RelativeLayout
        android:id="@+id/rl_al_handle"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x60"
        android:layout_marginBottom="@dimen/x40"
        android:layout_height="@dimen/x600"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_centerInParent="true"
        android:background="@drawable/card_background">

        <ImageView
            android:id="@+id/iv_al_vips_face"
            android:layout_width="@dimen/x360"
            android:layout_height="@dimen/x220"
            android:layout_marginTop="@dimen/x80"
            android:layout_marginLeft="@dimen/x30"
            android:scaleType="centerCrop"
            android:src="@mipmap/backimg" />

        <TextView
            android:id="@+id/tv_al_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_al_vips_face"
            android:layout_alignRight="@+id/iv_al_vips_face"
            android:layout_below="@+id/iv_al_vips_face"
            android:gravity="center"
            android:paddingBottom="@dimen/x10"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x10"
            android:text="    已接待贵宾照片！" />

        <TextView
            android:id="@+id/tv_dis_page"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:background="@drawable/num_circle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="69"
            android:textColor="@color/j_theme_color"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_al_vips_face">

            <!--改变表格的大小在这里-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x280"
                android:layout_marginLeft="@dimen/x100"
                android:layout_marginRight="@dimen/x100"
                android:layout_marginTop="@dimen/x80"
                android:background="@drawable/shape_squareno">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/line_al_h_center"
                    android:layout_toLeftOf="@+id/line_al_v_center">

                    <LinearLayout
                        android:id="@+id/ll1_al"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/line_al_h1"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_al"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x16"
                            android:gravity="center"
                            android:text="姓名：" />

                        <TextView
                            android:id="@+id/tv_al_vip_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="胡亦菲" />
                    </LinearLayout>

                    <View
                        android:id="@+id/line_al_h1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:id="@+id/ll3_al"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line_al_h1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x16"
                            android:gravity="center"
                            android:text="进入区域：" />

                        <TextView
                            android:id="@+id/tv_al_area"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="甘肃建总行办事处" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/line_al_v_center"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/line_al_h_center"
                    android:layout_centerHorizontal="true"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/line_al_h_center"
                    android:layout_toRightOf="@+id/line_al_v_center">

                    <LinearLayout
                        android:id="@+id/ll2_al"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/line_al_h2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x16"
                            android:gravity="center"
                            android:text="VIP级别：" />

                        <TextView
                            android:id="@+id/tv_al_vip_grade"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="钻石vip" />
                    </LinearLayout>

                    <View
                        android:id="@+id/line_al_h2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:id="@+id/ll4_al"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line_al_h2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x16"
                            android:gravity="center"
                            android:text="光临时间：" />

                        <TextView
                            android:id="@+id/tv_al_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="兰州" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/line_al_h_center"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/line_al_h_center">

                    <LinearLayout
                        android:id="@+id/ll5_al"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/line_al_h3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x16"
                            android:gravity="center"
                            android:text="身份证号：" />

                        <TextView
                            android:id="@+id/tv_al_idcard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="6201232055310056987" />
                    </LinearLayout>

                    <View
                        android:id="@+id/line_al_h3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:id="@+id/ll6_al"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line_al_h3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x16"
                            android:gravity="center"
                            android:text="银行卡号：" />

                        <TextView
                            android:id="@+id/tv_al_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="958962177710056987" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/bt_al_handle"
                android:layout_width="@dimen/x450"
                android:layout_height="@dimen/x90"
                android:layout_marginBottom="35dp"
                android:background="@mipmap/handle_no"
                android:gravity="center"
                android:text="已接待"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>