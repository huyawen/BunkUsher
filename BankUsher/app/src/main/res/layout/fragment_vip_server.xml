<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_list"
    tools:context="com.meiaomei.bankusher.fragment.VipServerFragment">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x50"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/x8"
        android:paddingTop="@dimen/x8">

        <RelativeLayout
            android:id="@+id/rl_vipser_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bt_disposed"
            android:layout_alignParentTop="@+id/bt_disposed"
            android:layout_alignStart="@+id/ll"
            android:layout_alignTop="@+id/ll"
            android:layout_marginLeft="@dimen/x50">

            <TextView
                android:id="@+id/tv_num_vipser_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@drawable/red_message_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="@dimen/x32"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="13sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_undisposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x20"
            android:background="@null"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="待接待"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/bt_disposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bt_undisposed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/bt_undisposed"
            android:background="@null"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="已接待"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <!--录入人脸vip的界面（暂停）-->
        <Button
            android:id="@+id/bt_regist"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/x90"
            android:background="@drawable/bt_select"
            android:text="录入VIP"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:visibility="visible" />

        <View
            android:id="@+id/icon_disposed"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x8"
            android:layout_below="@+id/bt_disposed"
            android:layout_alignLeft="@+id/bt_disposed"
            android:layout_alignRight="@+id/bt_disposed"
            android:background="@color/colortext_check" />

        <View
            android:id="@+id/icon_undisposed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x8"
            android:layout_below="@+id/bt_undisposed"
            android:layout_alignLeft="@+id/bt_undisposed"
            android:layout_alignRight="@+id/bt_undisposed"
            android:background="@color/colortext_check"
            android:visibility="visible" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_vipserver_undis"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_vipserver_dis"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top">

    </android.support.v7.widget.RecyclerView>


    <!--无数据显示-->
    <RelativeLayout
        android:id="@+id/rl_norecord"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_record"
            android:layout_marginTop="@dimen/x40"
            android:layout_width="@dimen/x316"
            android:layout_height="@dimen/x316"
            android:layout_centerInParent="true"
            android:src="@mipmap/no_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_record"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x30"
            android:text="没有待处理的消息"
            android:textColor="@color/color_line_dark"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>
